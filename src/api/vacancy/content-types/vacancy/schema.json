{
  "kind": "collectionType",
  "collectionName": "vacancies",
  "info": {
    "singularName": "vacancy",
    "pluralName": "vacancies",
    "displayName": "Vacancy"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "employment_type": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "required": true
    },
    "salary_min": {
      "type": "decimal"
    },
    "salary_max": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "open",
        "closed"
      ],
      "default": "open",
      "required": true
    },
    "posted_at": {
      "type": "datetime"
    },
    "deadline": {
      "type": "date"
    },
    "applications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::vacancy-application.vacancy-application",
      "mappedBy": "vacancy"
    }
  }
}
